<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recycler_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="center"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/tv_recycler_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_recycler_show"
            android:layout_margin="5dp"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_recycler_describe"
            android:background="#ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_recycler_describe"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/cb_recycler_favor"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerInParent="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/bg_checkbox_favor_selector"
                    android:textSize="15sp" />
            </RelativeLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ccc"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_recycler_share"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/bg_btn_share_pressed" />
            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>

    </android.support.v7.widget.CardView>